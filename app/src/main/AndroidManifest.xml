<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kotlin.demo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.kotlin.module.drawer.DrawerActivity"
                android:label="@string/title_activity_drawer"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.kotlin.module.animation.activity.NextTransActivity"
                android:theme="@style/TransitionTheme">
        </activity>
        <activity
                android:name="com.kotlin.module.animation.activity.TransitionActivity"
                android:theme="@style/TransitionTheme">
        </activity>
        <activity
                android:name="com.kotlin.module.BaseFragmentActivity"
                android:theme="@style/AppBarTheme">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>